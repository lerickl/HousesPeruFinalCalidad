@{
    ViewBag.Title = "Home Page";
    if (ViewBag.UserLogged == "ADMINISTRADOR")
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    if (ViewBag.UserLogged == "AGENTE")
    {
        Layout = "~/Views/Shared/_LayoutAgente.cshtml";
    }
    if (ViewBag.UserLogged == "USUARIO")
    {
        Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
    }
    if (ViewBag.UserLogged == null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<style>
    .er_goldcarousel img {
        max-width: 100%;
        max-height: 600px;
        margin: auto;
        width: 1350px;
        min-height: 400px;
    }
</style>

<div class="form-horizontal" id="Viewindex">

    <div class="er_cont_index">
        <div class="er_sombra_Index ">
            <div class="col-md-12">
                <div id="carouselpag" class="carousel slide carousel-fade er_goldcarousel " data-ride="carousel">

                    <ol class="carousel-indicators">
                        <li data-target="#carouselpag" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselpag" data-slide-to="1"></li>
                        <li data-target="#carouselpag" data-slide-to="2"></li>
                    </ol>

                    <div class="carousel-inner">

                        <div class="carousel-item active">
                            <img  class="d-block img-responsive img-fluid" loading="lazy" src="~/Content/images/casa1.jpg" alt="">
                            <div class="carousel-caption d-none d-md-block ">
                                <h3 id="imagen01"></h3>
                                <p>Precio</p>
                            </div>
                        </div>

                        <div class="carousel-item">
                            <img class="d-block img-responsive" loading="lazy" src="~/Content/images/casa2.jpg" alt="">
                            <div class="carousel-caption d-none d-md-block">
                                <h3 id="imagen02"></h3>
                                <p>Precio</p>
                            </div>
                        </div>

                        <div class="carousel-item ">
                            <img class="d-block img-responsive" loading="lazy" src="~/Content/images/casa3.jpg" alt="">
                            <div class="carousel-caption d-none d-md-block">
                                <h3 id="imagen03"></h3>
                                <p>Precio</p>
                            </div>
                        </div>

                    </div>

                    <a href="#carouselpag"   class="carousel-control-prev" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a href="#carouselpag" id="nextCarrouselPrincipal" class="carousel-control-next" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>

                </div>
            </div>
            <div class="er_sombra_index_cont">
                <hr />
                <div class="col-md-12">
                    <h1>Houses In Perú</h1>
                    <p>Bienes Inmuebles</p>
                    <hr />
                    <form class="er_cont_banner_link" action="/Inmueble/Buscar" method="post">
                        <i>
                            <h5 style="color:black; font-style:normal">Ubicacion</h5>
                            <select class="custom-select" style="color:forestgreen; opacity:0.5; border: 2px solid " name="ciudad" id="ciudad">
                                <option value="0" selected="selected">Seleccionar</option>
                                @foreach (var ciud in ViewBag.ciudad)
                                {
                                    <option value="@ciud.CiudadesId">@ciud.Nombre</option>
                                }

                            </select>
                        </i>
                        <i>
                            <h5 style="color:black; font-style:normal">Tipo</h5>
                            <select class="custom-select" style="color:forestgreen; opacity:0.5; border: 2px solid " name="TipoInmueble" id="TipoInmueble">
                                <option value="0" selected="selected">Seleccionar</option>
                                @foreach (var Tipinm in ViewBag.TipoInmueble)
                                {
                                    <option value="@Tipinm.InmuebleTipoId">@Tipinm.Nombre</option>
                                }

                            </select>

                        </i>
                        <i>
                            <h5 style="color:black; font-style:normal">
                                Estado
                            </h5>
                                <select class="custom-select" style="color:forestgreen; opacity:0.5; border: 2px solid " name="Estado" id="Estado">
                                    <option value="0" selected="selected">Seleccionar</option>
                                    <option value="Alquiler">Alquiler</option>
                                    <option value="Venta">Venta</option>
                                </select>

</i>
                        <div>
                            <i><button class="btn btn-light" id="buttonBuscar" type="submit" style="color:black; opacity:0.5; border: 2px solid "> Buscar </button></i>
                        </div>

                    </form>
                    <hr />
                </div>

            </div>
            <hr />
            @{int temp=0;}
            <div class="er_sombra_index_cont"></div>
            <div class="col-md-12">
                <div class=" ">
                    <div class="container">
                        <div class="row">
                            <div class="MultiCarousel" data-items="1,2,3,4" data-slide="1" id="MultiCarousel" data-interval="1000">
                                <div class="MultiCarousel-inner">
                                    
                                        @foreach (var Inmueble in ViewBag.Inmuebles)
                                        {
                                            temp++;  
                                            foreach (var Imagen in ViewBag.Imagenes)
                                            {

                                                if (Imagen.InmuebleId == Inmueble.InmuebleId)
                                                {
                                                <div class="item" style="opacity:0.95;  ">
                                                    <div class="pad15 er_cont_carrousel">
                                                        <div class="  " style="border-radius: 10px; ">
                                                            <img class="img-fluid" src="@Imagen.Img" style="" loading="lazy" />
                                                            <p style="color:white; background-color:rgba(0,0,0,0.8); top:-200px;position:relative;    border-radius: 5px;">
                                                                @foreach (var inmuebletipo in ViewBag.TipoInmueble)
                                                                {
                                                                    if (Inmueble.InmuebleTipoId == inmuebletipo.InmuebleTipoId)
                                                                    {
                                                                        <i class="fas fa-home"> @inmuebletipo.Nombre  </i>
                                                                    }
                                                                }

                                                            </p>
                                                        </div>
                                                        <div>
                                                            <h6 class="card-text"> @Inmueble.NombreInm </h6>

                                                            @foreach (var Ciudad in ViewBag.ciudad)
                                                            {
                                                                if (Inmueble.CiudadId == Ciudad.CiudadesId)
                                                                {
                                                                    <h6 class="card-text">Ciudad: @Ciudad.Nombre </h6>
                                                                }
                                                            }
                                                            @if (Inmueble.PrecioVentaInm != null && Inmueble.Moneda == "Soles")
                                                            {
                                                                <h6 class="card-text">
                                                                    <i class="far fa-money-bill-alt"></i> : S/.@Inmueble.PrecioVentaInm
                                                                </h6>
                                                            }

                                                            @if (Inmueble.PrecioAlquilerInm != null && Inmueble.Moneda == "Soles")
                                                            {
                                                                <h6 class="card-text">
                                                                    <i class="far fa-money-bill-alt"></i> : S/.@Inmueble.PrecioAlquilerInm
                                                                </h6>
                                                            }
                                                            @if (Inmueble.PrecioVentaInm != null && Inmueble.Moneda == "Dolares")
                                                            {
                                                                <h6 class="card-text">
                                                                    <i class="far fa-money-bill-alt"></i> : $/.@Inmueble.PrecioVentaInm
                                                                </h6>
                                                            }
                                                            @if (Inmueble.PrecioAlquilerInm != null && Inmueble.Moneda == "Dolares")
                                                            {
                                                                <h6 class="card-text"><i class="far fa-money-bill-alt"></i> : $/.@Inmueble.PrecioAlquilerInm </h6>
                                                            }
                                                            @if (Inmueble.NumCelular != null)
                                                            {
                                                                <h6 class="card-text">
                                                                    <i class="fas fa-phone-volume"></i>  : @Inmueble.NumCelular
                                                                </h6>
                                                            }
                                                            @{ string dato = "bttnVerInmueble" + temp;}
                                                            <a id="@dato" href="/Publicacion/GetInmuebleByID?IdInmueble=@Inmueble.InmuebleId" class="btn btn-lg btn-outline-light-blue text-dark" style="color:black; opacity:1; border: 3px solid   "> Ver </a>
                                                            <hr />
                                                        </div>

                                                    </div>



                                                </div>
                                            }
                                        }
                                    }

                                </div>
                                <button class="leftLst" style="background-color:transparent;color:black; opacity:0.5; font-weight: bold;font-size:60px;  "><</button>
                                <button class="rightLst" style="background-color:transparent;color:black; opacity:0.5;font-weight: bold;font-size:60px; ">></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
 
@using HousesPeru.Models;
@{
    ViewBag.Title = "ListaUsuarios";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    //var usrs = (List<Usuario>)Model;
}
<h1 id="ViewListaUsers"></h1>
<div class="er_ContPublicacion"></div>
<div class="er_cont_banner">
    <!-- Table with panel -->
    <div class="card card-cascade narrower" style="opacity:0.9">

        <!--Card image-->
        <div class="view view-cascade gradient-card-header blue-gradient narrower py-2 mx-4 mb-3 d-flex justify-content-between align-items-center">

          

            <a href="" class="white-text mx-3">Lista de Usuarios</a>

       

        </div>
        <!--/Card image-->

        <div class="px-4">

            <div class="table-wrapper">
                <!--Table-->
                <table class="table table-responsive-md mb-0">

                    <!--Table head-->
                    <thead>
                        <tr class="table-primary">
                            <th>
                                @*<input class="form-check-input" type="checkbox" id="checkbox">
            <label class="form-check-label" for="checkbox" class="mr-2 label-table"></label>*@
                            </th>
                            @*<th class="th-lg">
            <a>
                Id
                <i class="fas fa-sort ml-1"></i>
            </a>
        </th>*@
                            <th class="th-lg">
                                <a>
                                    Nombre
                                    <i class="fas fa-sort ml-1"></i>
                                </a>
                            </th>
                            <th class="th-lg">
                                <a href="">
                                    Apellido Paterno
                                    <i class="fas fa-sort ml-1"></i>
                                </a>
                            </th>
                            <th class="th-lg">
                                <a href="">
                                    Apellido Materno
                                    <i class="fas fa-sort ml-1"></i>
                                </a>
                            </th>
                            <th class="th-lg">
                                <a href="">
                                    Plan
                                    <i class="fas fa-sort ml-1"></i>
                                </a>
                            </th>
                            <th class="th-lg">
                                <a href="">
                                    Email
                                    <i class="fas fa-sort ml-1"></i>
                                </a>
                            </th>
                            <th class="th-lg">
                                <a href="">
                                    Password
                                    <i class="fas fa-sort ml-1"></i>
                                </a>
                            </th>

                        </tr>
                    </thead>
                    <!--Table head-->
                    <!--Table body-->
                    <tbody>
                        @{ var index = 1; }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">
                                    @*<input class="checkbox" type="checkbox" id="@index">
                                    <label for="@index"></label>*@
                                </th>

                                @*<td>@item.UsuarioId</td>*@
                                <td>@item.Nombre</td>
                                <td>@item.ApellidoP</td>
                                <td>@item.ApellidoM</td>
                                <td>@item.Plan.Nombre</td>
                                <td>@item.Email</td>
                                <td>@item.Password</td>


                            </tr>

                            index++;
                        }
                    </tbody>
                    <!--Table body-->
                </table>
                <!--Table-->
            </div>

        </div>

    </div>
    <!-- Table with panel -->
</div>
